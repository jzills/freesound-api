{
	"compilerOptions": {
		"target": "ESNext", 
		"module": "ESNext", 
		"declaration": true, 
		"stripInternal": true,
		"outDir": "dist", 
		"moduleResolution": "Node", 
		"strict": true,
		"esModuleInterop": true, 
		"skipLibCheck": true, 
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*"
	], 
	"exclude": [
		"node_modules"
	]
}